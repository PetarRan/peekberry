{
  "name": "peekberry",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "lint:fix": "next lint --fix",
    "build:extension:dev": "webpack --mode development --config src/app/\\(extension\\)/webpack.config.js",
    "build:extension:prod": "webpack --mode production --config src/app/\\(extension\\)/webpack.config.js",
    "watch:extension": "webpack --mode development --config src/app/\\(extension\\)/webpack.config.js --watch",
    "db:test": "node scripts/test-db.js",
    "db:types": "supabase gen types typescript --local > src/types/database.ts",
    "setup:prod": "./scripts/setup-production.sh",
    "build:all": "npm run build && npm run build:extension:prod",
    "deploy:vercel": "vercel --prod",
    "deploy:netlify": "netlify deploy --prod"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.31.10",
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@hookform/resolvers": "^3.3.0",
    "@mui/icons-material": "^5.15.0",
    "@mui/material": "^5.15.0",
    "@supabase/ssr": "^0.7.0",
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.0.0",
    "jose": "^6.1.0",
    "next": "^15.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.48.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "copy-webpack-plugin": "^11.0.0",
    "dotenv": "^16.3.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "^15.0.0",
    "prettier": "^3.1.0",
    "ts-loader": "^9.5.0",
    "typescript": "^5.0.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.0"
  }
}
