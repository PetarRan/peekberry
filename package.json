{
  "name": "peekberry",
  "version": "1.0.0",
  "description": "Chrome extension for ephemeral UI modifications using natural language",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && cp manifest.json dist/ && cp -r public/icons dist/",
    "build:extension": "npm run generate-icons && npm run build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "generate-icons": "node scripts/generate-icons.cjs"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.0",
    "@mui/material": "^5.14.0",
    "@supabase/supabase-js": "^2.38.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "^0.0.246",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "sharp": "^0.34.3",
    "typescript": "^5.0.2",
    "vite": "^7.1.4"
  }
}
