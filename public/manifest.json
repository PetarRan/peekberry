{
  "manifest_version": 3,
  "name": "DOM Modifier",
  "version": "1.0.0",
  "description": "Select and modify elements on any page.",
  "permissions": ["scripting", "activeTab", "tabs"],
  "action": {
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["peekberry-logo.avif"],
      "matches": ["<all_urls>"]
    }
  ]
}
