{
  "manifest_version": 3,
  "name": "Peekberry - DevTools for non-devs",
  "version": "1.0.0",
  "description": "Select and modify elements on any page.",
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "permissions": ["scripting", "activeTab", "tabs", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["peekberry-logo.avif"],
      "matches": ["<all_urls>"]
    }
  ]
}