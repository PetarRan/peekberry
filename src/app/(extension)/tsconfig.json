{
  "extends": "../../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["chrome", "node"],
    "strictPropertyInitialization": false
  },
  "include": ["**/*.ts", "../../../types/**/*"],
  "exclude": ["node_modules", "dist"]
}
