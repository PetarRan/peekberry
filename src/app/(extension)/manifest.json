{
  "manifest_version": 3,
  "name": "Peekberry",
  "version": "1.0.0",
  "description": "AI-powered DOM editor for making ephemeral UI changes on any website",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "tabs",
    "desktopCapture"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Peekberry - AI DOM Editor"
  },
  "icons": {
    "16": "assets/icon-16.png",
    "32": "assets/icon-32.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["content/*", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
